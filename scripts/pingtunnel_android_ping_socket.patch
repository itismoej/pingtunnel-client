new file mode 100644
index 0000000..b4d3a52
--- /dev/null
+++ b/icmp_listen_android.go
@@ -0,0 +1,36 @@
+//go:build android
+
+package pingtunnel
+
+import (
+	"golang.org/x/net/icmp"
+	"golang.org/x/sys/unix"
+	"net"
+	"os"
+)
+
+func listenICMP(addr string) (*icmp.PacketConn, error) {
+	// Try unprivileged "ping socket" on Android (SOCK_DGRAM, IPPROTO_ICMP).
+	fd, err := unix.Socket(unix.AF_INET, unix.SOCK_DGRAM, unix.IPPROTO_ICMP)
+	if err == nil {
+		sa := &unix.SockaddrInet4{Port: 0}
+		if addr != "" && addr != "0.0.0.0" {
+			ip := net.ParseIP(addr).To4()
+			if ip != nil {
+				copy(sa.Addr[:], ip)
+			}
+		}
+		if bindErr := unix.Bind(fd, sa); bindErr == nil {
+			file := os.NewFile(uintptr(fd), "pingtunnel-icmp")
+			conn, err := net.FilePacketConn(file)
+			if err == nil {
+				return icmp.NewPacketConn(conn), nil
+			}
+			_ = file.Close()
+		}
+		_ = unix.Close(fd)
+	}
+
+	// Fallback to raw ICMP (will require CAP_NET_RAW).
+	return icmp.ListenPacket("ip4:icmp", addr)
+}


